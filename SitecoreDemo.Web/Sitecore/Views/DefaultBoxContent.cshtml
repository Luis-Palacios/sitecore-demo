@inherits System.Web.Mvc.WebViewPage
@using Sitecore.Mvc;

<div class="box">
    <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">
            @Html.Sitecore().Field("Title")
        </h2>
        <hr>
    </div>
    @{ 
        var currentItem = Html.Sitecore().CurrentItem;
        var imageField = currentItem.Fields["Image"];
    }
    @if (imageField != null && imageField.HasValue)
    {
        <div class="col-md-4">
            @Html.Sitecore().Field("Image", new { @class = "img-responsive img-border img-left" })
        </div>
        <div class="col-md-8">
            <hr class="visible-xs">
            @Html.Sitecore().Field("Content")
        </div>
    }
    else
    {
        <div class="col-md-12">
            @Html.Sitecore().Field("Content")
        </div>
    }
</div>