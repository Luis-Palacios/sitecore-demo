@using SitecoreDemo.Web.Utils;

@{
    var team = Sitecore.Context.Database
                .GetItem(SitecoreConstants.ContentFolderIds.TEAM)
                .GetChildren()
                .ToList();
}
<div class="box">
    <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">
            Our
            <strong>Team</strong>
        </h2>
        <hr>
    </div>
    @foreach (var staff in team)
    {
        <div class="col-sm-4 text-center">
            @Html.Sitecore().Field("Picture", staff, new { style = "max-width:100%" })
            <h3>
                @Html.Sitecore().Field("Name", staff)
                <small>@Html.Sitecore().Field("JobTitle", staff)</small>
            </h3>
        </div>
    }
    <div class="clearfix"></div>
</div>